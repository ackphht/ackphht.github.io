###############################################################################
# Set default behavior to automatically normalize line endings.
###############################################################################
* text=auto

###############################################################################
# Set these files to *nix line endings
###############################################################################
.editorconfig	text eol=lf
*.adoc			text eol=lf
*.asc			text eol=lf
*.asciidoc		text eol=lf
*.css			text eol=lf
*.go			text eol=lf
*.htm			text eol=lf
*.html			text eol=lf
*.js			text eol=lf
*.json			text eol=lf
*.md			text eol=lf
*.markdown		text eol=lf
*.py			text eol=lf
*.rs			text eol=lf
*.sh			text eol=lf
*.toml			text eol=lf
*.ts			text eol=lf
*.xhtm			text eol=lf
*.xhtml			text eol=lf
*.xml			text eol=lf
*.yaml			text eol=lf
*.yml			text eol=lf
